<%= form_for @archive do |f| %>
   <%= f.label :human_readable_name %>
   <%= f.text_field :human_readable_name %>
   <br /><br />
   <%= f.label :public_archive_subdomain %>
   <%= f.text_field :public_archive_subdomain %>
   <br /><br />
   <%= f.label :description %>
   <%= f.text_area :description %>
   <br /><br />
   <%= f.label :theme %>
   <%= f.select :theme, JSON.parse(File.read("app/views/archives/json_select_lists/theme_list.json")) %>
   <br /><br />
   <%= f.label :language %>
   <%= f.select :language, JSON.parse(File.read("app/views/archives/json_select_lists/language_list.json")) %>
   <br /><br />
   <%= f.label :topbar_links %><br /><br />
   <%= f.fields_for :topbar_links do |t| %>
     <%= t.label :link_title %>
     <%= t.text_field :link_title %>
     <%= t.label :link %>
     <%= t.text_field :link %>
   <% end %>
   <br /><br />
   <%= f.label :info_dropdown_links %><br /><br />
   <%= f.fields_for :info_dropdown_links do |t| %>
     <%= t.label :link_title %>
     <%= t.text_field :link_title %>
     <%= t.label :link %>
     <%= t.text_field :link %>
   <% end %>  
   <br /><br />
   <%= f.submit %>
<% end %>
